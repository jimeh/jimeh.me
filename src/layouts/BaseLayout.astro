---
import "../styles/main.scss";
import SEOHead from "../components/SEOHead.astro";
import { siteConfig } from "../data/site";

interface Props {
  title?: string;
}

const { title } = Astro.props;
const pageTitle = title || siteConfig.title;
const cacheBust = Date.now();
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <title>{pageTitle}</title>

    <SEOHead />
    <link
      rel="shortcut icon"
      href={`/favicon.ico?${cacheBust}`}
    />
    <link
      rel="apple-touch-icon"
      href={`/apple-touch-icon.png?${cacheBust}`}
    />
    <link
      href="//fonts.googleapis.com/css?family=Open+Sans+Condensed:700,300|Open+Sans:400italic,700italic,400,700"
      rel="stylesheet"
      type="text/css"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
