---
import "../styles/main.css";
import { createHash } from "node:crypto";
import { readFileSync } from "node:fs";
import { Font } from "astro:assets";
import SEOHead from "../components/SEOHead.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import { siteConfig } from "../data/site";

interface Props {
  title?: string;
}

/** Short content hash for cache busting a public/ asset. */
function fileHash(path: string): string {
  const data = readFileSync(new URL(path, import.meta.url));
  return createHash("sha256")
    .update(new Uint8Array(data))
    .digest("hex")
    .slice(0, 8);
}

const { title } = Astro.props;
const pageTitle = title || siteConfig.title;
const faviconHash = fileHash("../../public/favicon.ico");
const appleTouchHash = fileHash("../../public/apple-touch-icon.png");
---

<!doctype html>
<html class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>

    <SEOHead />
    <Font cssVariable="--font-open-sans" preload />
    <link rel="icon" href={`/favicon.ico?v=${faviconHash}`} />
    <link
      rel="apple-touch-icon"
      href={`/apple-touch-icon.png?v=${appleTouchHash}`}
    />
    <script is:inline>
      (function () {
        let t = null;
        try {
          t = localStorage.getItem("theme");
        } catch {
          /* localStorage unavailable */
        }
        const d =
          t === "dark" ||
          (t !== "light" &&
            window.matchMedia("(prefers-color-scheme: dark)").matches);
        if (d) document.documentElement.classList.add("dark");
      })();
    </script>
  </head>
  <body
    class="h-full bg-white font-sans text-sm leading-normal text-slate-900 dark:bg-black dark:text-slate-100"
  >
    <ThemeToggle />
    <slot />
  </body>
</html>
