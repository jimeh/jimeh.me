---
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
  url: string;
  icon: string;
  rel?: string;
}

const { name, url, icon, rel } = Astro.props;
const resolvedRel = [rel, "noopener", "noreferrer"].filter(Boolean).join(" ");
---

{/* prettier-ignore */}
<a href={url} rel={resolvedRel}
  ><Icon name={icon} /><span class="link-text">{name}</span></a
>
